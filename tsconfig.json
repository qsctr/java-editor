{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "noEmitOnError": true,
        "rootDir": "./ts",
        "outDir": "./out-js",
        "lib": [
            "dom",
            // "dom.iterable", bug; will be fixed in typescript 2.1
            "es6",
            "es2016.array.include"
        ]
    },
    "exclude": [
        "node_modules",
        "dependencies",
        "typings/globals",
        ".vscode",
        "Java Editor-win32-x64"
    ]
}